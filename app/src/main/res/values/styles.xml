<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_login_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:background">@color/black_traslucent</item>
        app:hintTextColor="@color/white"
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Book_Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Book_Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Book_Description">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/description</item>
    </style>

    <style name="ListEmpty">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_50</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="input_pass_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:background">@color/black_traslucent</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>